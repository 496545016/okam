/**
 * @file The app entry style
 * @author ${author|raw}
 */

<% var: size = ${px2rpx} ? 150 : 50 %>
<% if: ${style} === 'stylus' %>
@import './common/css/common'
.page-img
    margin: 0 auto
    display: block
    width: ${size}px
    height: ${size}px
.page-footer
    position: absolute
    bottom: 80px
    width: 100%
    text-align: center
<% else %>

<% if: ${style} === 'css' %>
@import './common/css/common.css';
<% else %>
@import './common/css/common';
<% /if %>

.page-img {
    margin: 0 auto;
    display: block;
    width: ${size}px;
    height: ${size}px;
}
.page-footer {
    position: absolute;
    bottom: 80px;
    width: 100%;
    text-align: center;
}
<% /if %>
