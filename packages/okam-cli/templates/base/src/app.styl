/**
 * @file The app entry style
 * @author ${author|raw}
 */

<% if: ${style} === 'stylus' %>

<% var: size = ${px2rpx} ? 150 : 50 %>

<% if: ${h5tag} %>
.okam-inline
    display: inline
<% /if %>
.page-img
    margin: 0 auto
    display: block
    width: ${size}px
    height: ${size}px
.page-footer
    position: absolute
    bottom: 80px
    width: 100%
    text-align: center
<% else %>
<% if: ${h5tag} %>
.okam-inline {
    display: inline;
}
<% /if %>
.page-img {
    margin: 0 auto;
    display: block;
    width: ${size}px;
    height: ${size}px;
}
.page-footer {
    position: absolute;
    bottom: 80px;
    width: 100%;
    text-align: center;
}
<% /if %>
