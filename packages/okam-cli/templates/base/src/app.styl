<% if: ${style} === 'stylus' %>

<% if: ${h5tag} %>
.okam-inline
    display: inline
<% /if %>
.page-footer
    position: absolute
    bottom: 80px
    width: 100%
    text-align: center
<% else %>
<% if: ${h5tag} %>
.okam-inline {
    display: inline
}
<% /if %>
.page-footer {
    position: absolute;
    bottom: 80px;
    width: 100%;
    text-align: center;
}
<% /if %>
